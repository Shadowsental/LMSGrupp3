@model LMSGrupp3.Models.Entities.Course

@{
    ViewData["Title"] = "Course Student List: " + Model.Name; 
}

<h1>@Model.Name</h1>


<table class="table">
    <tbody>
@foreach (var item in Model.Users.Where(a => a.User.Email.Contains("student"))) {
        <tr>
            <div class="row studentRow">
                <div class="card" style="height: 140px; margin: 3px;">
                <div class="col-sm-10 font-weight-bold" style="font-size: 40px">
                    @item.User.Name
                </div>
                
                <div class="col-sm-4 font-weight-bold">
                    @item.User.Email
                </div>
                </div>
            </div>
        </tr>
}
    </tbody>
</table>