@using Microsoft.AspNetCore.Http
@model LMSGrupp3.Models.Entities.Module

@{
    ViewData["Title"] = "Skapa Modul i kurs: "+@TempData.Peek("LastCourseName");
}
<br />
<h1>Skapa modul i kurs: @TempData.Peek("LastCourseName")</h1>
<p>Kursen börjar: @ViewData["courseTimeStart"]</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
                <span class="text-danger">@ViewData["errorTimeStart"]</span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
                <span class="text-danger">@ViewData["errorTimeEnd"]</span>
            </div>
            <div>
                <input hidden asp-for="@Model.CourseId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa modul" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-sm btn-info" asp-controller="Courses" asp-action="Details" asp-route-id="@TempData.Peek("LastCourseId")"><i class="fas fa-undo-alt"></i> Tillbaka till kursdetaljer för @TempData.Peek("LastCourseName")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}