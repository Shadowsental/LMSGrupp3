@model IEnumerable<ActivityListViewModel>

<h2>Activities</h2>

<div id="activity-header-row" class="row">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.StartDate)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.StopDate)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.ActivityType)
    </div>
    <div class="col-sm-1">
    </div>
</div>

@foreach (var item in Model)
{
    <!--Edit/Details etc-->
    <div class="row">
        <div class="col-sm-2">
            <a asp-controller="Activities" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(modelItem => item.StartDate)
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(modelItem => item.StopDate)
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(modelItem => item.ActivityType)
        </div>
        <div class="col-sm-1 col-icons">
            <a asp-controller="Documents" asp-action="UploadActivityDoc" asp-route-id="@item.Id">
                <img class="icon-img" src="~/icons/share.svg" />   
            </a>
