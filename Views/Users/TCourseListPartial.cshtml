@using LMSGrupp3.Models.Entities
@model IEnumerable<Course>

<table id="courseindex" class="table table-sm">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                <a asp-action="THome" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.StartTime)*@
                <a asp-action="THome" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.StartDate)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Teacher" asp-controller="Users" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>

            <td>
                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.Id">
                     alt="Edit" />
                </a> &nbsp;
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">
                     alt="Details" />
                </a> &nbsp;
                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id">
                    alt="Delete" />
                </a>
            </td>

        </tr>
        }
    </tbody>
</table>