@model LMSGrupp3.Models.Entities.ActivityModel

@{
    ViewData["Title"] = "Redigera aktivitet";
}

<h1>Redigera aktivitet @Model.Name </h1>

<hr />
<div class="row">

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ActivityTypeId" class="control-label"></label>
                <select asp-for="ActivityTypeId" class="form-control" asp-items="ViewBag.ActivityTypeId"></select>
                <span asp-validation-for="ActivityTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StopDate" class="control-label"></label>
                <input asp-for="StopDate" class="form-control" />
                <span asp-validation-for="StopDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="ModuleId" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm" ><i class="fas fa-save"></i> Spara</button>
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btn btn-sm btn-info" asp-controller="Modules" asp-action="Details" asp-route-id=" @TempData.Peek("LastModuleId")"><i class="fas fa-undo-alt"></i> Tillbaka till moduldetaljerdetaljer @TempData.Peek("LastCourseName")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
