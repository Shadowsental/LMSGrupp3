@page
@*@using LMSGrupp3.Areas.Identity.Pages.Account*@
@model LoginModel

@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<div class="login-box">
        <h2>LOGIN</h2>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="user-box">
                 <label asp-for="Input.Email"></label>  
            <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-warning"></span>
                       </div>

            <div class="user-box">
                    <label asp-for="Input.Password"></label>  
            <input asp-for="Input.Password" class=" form-control" />
                    <span asp-validation-for="Input.Password" class="text-warning"></span>
            </div>
            <a>
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <div class="form-group">
                    
                    <button type="submit" class="btn-secondary" asp-route-returnUrl="@Model.ReturnUrl">LOGIN</button>
                </div>
               </a>
            
        </form>
    </div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}